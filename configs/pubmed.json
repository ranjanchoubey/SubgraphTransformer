{
  "gpu": {
    "use": true,
    "id": 0
  },
  "model": "GraphTransformer",
  "dataset": "Pubmed",
  "out_dir": "out/",
  
  "params": {
    "seed": 41,
    "epochs": 200,
    "batch_size": 128,
    "init_lr": 0.0007,
    "lr_reduce_factor": 0.5,
    "lr_schedule_patience": 15,
    "min_lr": 1e-6,
    "weight_decay": 0.0,
    "print_epoch_interval": 5,
    "max_time": 24,
    "propagation": {
      "num_labels": 1,
      "method": "connectivity"
    }
  },
  
  "net_params": {
    "L": 10,
    "n_heads": 16,
    "hidden_dim": 64,
    "out_dim": 64,
    "edge_feat": false,
    "residual": true,
    "readout": "mean",
    "in_feat_dropout": 0.0,
    "dropout": 0.01,
    "layer_norm": false,
    "batch_norm": true,
    "self_loop": true,
    "lap_pos_enc": false,
    "pos_enc_dim": 8,
    "wl_pos_enc": false,
    "full_graph": false
  },
  
  "data": {
    "num_parts": 100, 
    "num_classes": 3  
  },
  
  "gcn": {
    "input_dim": 500,  
    "hidden_dim": 256,
    "output_dim": 32
  }
}
